{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "strictNullChecks": true,
        "skipLibCheck": true,
        "rootDir": "src"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "public"]
}